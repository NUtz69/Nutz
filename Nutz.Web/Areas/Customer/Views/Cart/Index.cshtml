@model Nutz.Models.ViewModels.ShoppingCartVM

@*005 - Shopping Cart*@
<form method="post">
	<br />
	<div class="container">
		<div class="card mb-3">
			<div class="card-header">
				<div class="row">
					<div class="col-6 pt-2">
						<i class="bi bi-shop"></i> Shopping Cart
					</div>
					<div class="col-6 text-end">
						<a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-dark btn-sm">Continue Shopping</a> @*Btn*@
					</div>
				</div>
			</div>

			<div class="card-body">
				@foreach(var item in Model.ListCart)
				{
					<div class="row">
						<div class="d-none d-lg-block col-lg-1 text-center py-2">
							<img src="@item.Product.ImageUrl" class="rounded" width="100%" /> @*Image*@
						</div>
						<div class="col-12 col-lg-6 pt-md-3">
							<h5><strong>@item.Product.Title</strong></h5>
							<p><small>@Html.Raw(item.Product.Description)</small></p> @*Description*@
						</div>
						<div class="col-12  col-lg-5 text-center row">
							<div class="col-4 text-md-right pt-4">
								<h6><strong>@item.Price.ToString("c")
									<span class="text-muted">x&nbsp;</span>@item.Count </strong></h6> @*Price*@
							</div>
							<div class="col-6 col-sm-4 col-lg-6 pt-2">
								<div class="w-75 btn-group" role="group">
									<a asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-outline-dark"> @*plus*@
										<i class="bi bi-plus-square"></i>
									</a> &nbsp;
									<a asp-action="minus" asp-route-cartId="@item.Id" class="btn btn-outline-warning"> @*minus*@
										<i class="bi bi-dash-square"></i>
									</a> &nbsp;
									<a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-outline-danger"> @*remove*@
										<i class="bi bi-trash-fill"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
					<hr />
				}

				<div class="row">
					<div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
						<ul class="list-group">
							<li class="list-group-item d-flex justify-content-between bg-light">
								<span class="text-info"> Total (EUR)</span>
								<strong class="text-info">@Model.CartTotal.ToString("c")</strong> @*CartTotal*@
							</li>
						</ul>
					</div>
				</div>

			</div>

			<div class="card-footer text-muted">
				<div class="row">
					<div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
						<a asp-action="Summary" class="btn btn-primary form-control">Summary</a> @*Summary*@
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
