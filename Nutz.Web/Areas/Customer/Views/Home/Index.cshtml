@model IEnumerable<Nutz.Models.Product>

@*005 - Shopping Cart*@
<br />

<div class="container row pb-3">
	@foreach(var product in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">

					@*Card*@
					<div class="card" style="height:450px"> 
						<img src="@product.ImageUrl" class="card-img-top rounded" style="height:280px" /> @*Image*@

						<div class="card-body">
							<div class="pl-1">
								<p class="card-title h5 text-primary">@product.Title</p> @*Title*@
								<p class="card-title text-info">by <b>@product.Author</b></p> @*Author*@
							</div>
							<div class="pl-1">
								<p>List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p> @*ListPrice*@
							</div>
							<div class="pl-1">
								<p>As low as: <b>$@product.Price100.ToString("0.00")</b></p> @*Price100*@
							</div>
						</div>
					</div>

					<div>
						@*Btn*@
						<a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">	Details</a>
					</div>
				</div> 
			</div>
		</div>
	}
</div>
